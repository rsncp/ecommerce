<section>
    <div class="container">
      <div class="row mt-4">
        <a href="/admin/add-product" class="btn btn-success ml-auto" >ADD Product</a>
      </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">price</th>
      <th scope="col">Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">{{this.Number}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Price}}</td>
       <td>{{this.Discription}}</td>
      <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg"></td>
    </tr>
   {{/each}}
  </tbody>
</table>
    </div>
</section>